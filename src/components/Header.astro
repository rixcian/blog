          <img src="/avatar.png" alt="avatar" class="w-6 h-6" />
          <div class="font-semibold">
            {SITE.NAME}
          </div>
        </div>
      </Link>
      <nav class="flex gap-1">
        <Link href="/blog">
          blog
        </Link>
        <span>
          {`/`}
        </span>
        <Link href="/work">
          work
        </Link>
        <span>
          {`/`}
        </span>
        <Link href="/projects">
          projects
        </Link>
      </nav>
    </div>
